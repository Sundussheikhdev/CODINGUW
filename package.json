{
  "name": "investor-readiness-platform",
  "version": "1.0.0",
  "description": "Investor Readiness Vertical Slice - Take Home Test",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd apps/backend && npm run dev",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd apps/backend && npm run build",
    "build:frontend": "cd apps/frontend && npm run build",
    "test": "npm run test:backend",
    "test:backend": "cd apps/backend && npm run test",
    "db:generate": "cd apps/backend && npx prisma generate",
    "db:migrate": "cd apps/backend && npx prisma migrate dev",
    "db:seed": "cd apps/backend && npx tsx prisma/seed.ts",
    "reset": "cd apps/backend && npx tsx scripts/reset.ts"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}